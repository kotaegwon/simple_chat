<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 이메일 -->
    <EditText
        android:id="@+id/edit_register_email"
        style="@style/EditText_LogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_email"
        android:inputType="textEmailAddress"
        android:paddingVertical="12dp"
        android:textColorHint="#80FF8800" />

    <!-- 비밀번호 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/typing_space_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:outlineProvider="none"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_register_pwd"
                style="@style/EditText_LogIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/edit_pwd"
                android:inputType="textPassword"
                android:textColor="@color/orange"
                android:textColorHint="#80FF8800" />

            <ImageView
                android:id="@+id/image_visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/visibility_off" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 이름 -->
    <EditText
        android:id="@+id/edit_register_name"
        style="@style/EditText_LogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:paddingVertical="12dp"
        android:textColorHint="#80FF8800" />

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- 취소 버튼 -->
        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_dialog_cancel"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <!-- 남는 공간 채움 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 확인 버튼 -->
        <Button
            android:id="@+id/btn_dialog_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_dialog_okay"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
